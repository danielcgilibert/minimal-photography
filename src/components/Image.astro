---
export interface Props {
  src: string
  animationDelay: number
}

const { src, animationDelay } = Astro.props
---

<img
  src={`${src}`}
  loading="lazy"
  class="rounded-[5px] col-span-2 w-full object-cover transition-all opacity-0 h-[350px]"
  data-animation-offset={animationDelay}
  alt={src}
/>
